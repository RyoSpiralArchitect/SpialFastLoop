\
[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[project]
name = "spiralfastloop"
version = "0.1.1"
description = "Fast, practical PyTorch training loop with Surpriseâ†’Repair option"
authors = [{name="Ryo", email="example@example.com"}]
readme = "README.md"
requires-python = ">=3.9"
license = {text = "MIT"}
dependencies = ["torch>=2.1"]

[tool.setuptools.packages.find]
where = ["."]
include = ["spiralfastloop*"]


[project.urls]
Homepage = "https://github.com/your-user/SpiralFastLoop"
Repository = "https://github.com/your-user/SpiralFastLoop"

[project.keywords]
keywords = ["pytorch", "training", "cuda", "mps", "acceleration", "llm", "transformers"]

[project.classifiers]
classifiers = [
  "Programming Language :: Python :: 3",
  "License :: OSI Approved :: MIT License",
  "Operating System :: OS Independent",
  "Topic :: Scientific/Engineering :: Artificial Intelligence"
]
